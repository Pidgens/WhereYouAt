<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/signUpLayout"
    android:focusableInTouchMode="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the following information to create an account."
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/textView3"
        android:layout_marginTop="51dp"
        android:textSize="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        android:gravity="center"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/enterEmail"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/enterUserName"
        android:layout_alignLeft="@+id/enterUserName"
        android:layout_alignStart="@+id/enterUserName"
        android:layout_alignRight="@+id/enterUserName"
        android:layout_alignEnd="@+id/enterUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_below="@+id/enterEmail"
        android:layout_alignLeft="@+id/enterEmail"
        android:layout_alignStart="@+id/enterEmail"
        android:layout_alignRight="@+id/enterEmail"
        android:layout_alignEnd="@+id/enterEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterUserName"
        android:singleLine="true"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/toJoinButton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/enterPassword"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/enterUserName"
        android:layout_alignStart="@+id/enterUserName"
        android:layout_alignRight="@+id/enterUserName"
        android:layout_alignEnd="@+id/enterUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:id="@+id/adsdasdsa"
        android:layout_alignLeft="@+id/enterPassword"
        android:layout_alignStart="@+id/enterPassword"
        android:layout_below="@+id/enterPassword"
        android:layout_alignRight="@+id/enterPassword"
        android:layout_alignEnd="@+id/enterPassword"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/enterConfirm"
        android:layout_below="@+id/adsdasdsa"
        android:layout_alignLeft="@+id/adsdasdsa"
        android:layout_alignStart="@+id/adsdasdsa"
        android:layout_alignRight="@+id/adsdasdsa"
        android:layout_alignEnd="@+id/adsdasdsa" />

</RelativeLayout>